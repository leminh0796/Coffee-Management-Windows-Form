<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
        xmlns:L3="clr-namespace:Lemon3.Controls.DevExp;assembly=D99D0451"
      xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors">
    
    <ControlTemplate x:Key="UnitID">
        <L3:L3GridControl Name="PART_GridControl">
            <dxg:GridControl.Columns>
                <dxg:GridColumn FieldName="ListID" Header="Mã"  Width="150"  Visible="True"/>
                <dxg:GridColumn FieldName="ListName" Header="Tên"  Width="300"  HorizontalHeaderContentAlignment="Center"/>
            </dxg:GridControl.Columns>
            <dxg:GridControl.View>
                <dxg:TableView AutoWidth="True" ShowIndicator="False"  ShowVerticalLines="True" ShowHorizontalLines="True" ShowCheckBoxSelectorColumn="True"/>
            </dxg:GridControl.View>
        </L3:L3GridControl>
    </ControlTemplate>
    
</ResourceDictionary>